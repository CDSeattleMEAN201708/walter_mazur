<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dojo Message Board</title>
  </head>
  <body>
    <h1>Dojo Messaging Board</h1>
    <form action="/message" method="post">
      <label for="name">Name:</label>
      <input type="text" name="name">
      <label for="message">Message:</label>
      <input type="text" name="message">
      <input type="submit" value="Submit">
    </form>
    <div class="messages" >
      <%for(let i = 0; i<messages.length;i++){%>
        <div class="message" style='border: 1px solid black;'>
        <p>Name: <%= messages[i].name%></p>
        <p>Message: <%= messages[i].message%></p>


        <%for(let j = 0;j<messages[i].comments.length;j++){%>
          <div class="comment" style="padding-left:20px;">
            <p>Name: <%= messages[i].comments[j].name%></p>
            <p>Comment: <%= messages[i].comments[j].comment%></p>
          </div>
        </div>
        <%}%>

        <form action="/comment/<%=messages[i]._id%>" method="post">
          <input type="text" name="name" placeholder="Name">
          <input type="text" name="comment" placeholder="Comment">
          <input type="submit" value="Leave Comment">
        </form>
      <%}%>
    </div>
  </body>
</html>
